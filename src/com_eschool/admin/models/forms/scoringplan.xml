<?xml version="1.0" encoding="utf-8"?>
<!-- $Id$ -->
<form>
	<fieldset>
		<field name="id"
			type="text"
			label="JGLOBAL_FIELD_ID_LABEL"
			description ="JGLOBAL_FIELD_ID_DESC"
			default="0"
			class="readonly"
			size="10"
			readonly="true"  />

		<field name="semester_id"
			type="semester"
			label="COM_ESCHOOL_SEMESTER_LABEL"
			description="COM_ESCHOOL_SEMESTER_DESC"
			default="0"
			class="inputbox"
			required="true">
		</field>

		<field name="syllabus_id"
			type="hidden"
			label="COM_ESCHOOL_SYLLABUS_LABEL"
			description="COM_ESCHOOL_SYLLABUS_DESC"
			default="0"
			class="inputbox" />
				
		<field name="course_id"
			type="syllabuscourse"
			label="COM_ESCHOOL_COURSE_LABEL"
			description="COM_ESCHOOL_COURSE_DESC"
			default="0"
			class="inputbox"
			required="true">
		</field>
		
		<field name="scoring_type_id"
			type="scoringtype"
			label="COM_ESCHOOL_SCORING_TYPE_LABEL"
			description="COM_ESCHOOL_SCORING_TYPE_DESC"
			default="0"
			class="inputbox"
			required="true">
		</field>
		
		<field name="weight"
			type="text"
			label="COM_ESCHOOL_SCORING_WEIGHT_LABEL"
			description="COM_ESCHOOL_SCORING_WEIGHT_DESC"
			class="inputbox"
			size="10" />

		<field name="published"
			type="list"
			label="JPUBLISHED"
			description="JFIELD_PUBLISHED_DESC"
			default="1"
			class="inputbox"
			filter="intval"
			size="1">
			<option value="1">
				JPUBLISHED</option>
			<option value="0">
				JUNPUBLISHED</option>
			<option value="2">
				JARCHIVED</option>
			<option value="-2">
				JTRASHED</option>
		</field>

		<field name="ordering"
			type="text"
			label="JFIELD_ORDERING_LABEL"
			description="JFIELD_ORDERING_DESC"
			default="0"
			class="inputbox"
			size="6" />

		<field name="access"
			type="accesslevel"
			label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC"
			class="inputbox"
			size="1" />

		<field name="language"
			type="contentlanguage"
			label="JFIELD_LANGUAGE_LABEL"
			description="JFIELD_FIELD_LANGUAGE_DESC"
			default="*"
			class="inputbox">
			<option value="*">JALL</option>
		</field>

		<field name="metadesc"
			type="textarea"
			label="JFIELD_META_DESCRIPTION_LABEL"
			description="JFIELD_META_DESCRIPTION_DESC"
			class="inputbox"
			rows="3"
			cols="30" />

		<field name="metakey"
			type="textarea"
			label="JFIELD_META_KEYWORDS_LABEL"
			description="JFIELD_META_KEYWORDS_DESC"
			class="inputbox"
			rows="3"
			cols="30" />

		<field name="checked_out"
			type="hidden"
			filter="unset" />

		<field name="checked_out_time"
			type="hidden"
			filter="unset" />

		<field name="created_by"
			type="hidden"
			filter="unset" />

		<field name="created"
			type="text"
			label="COM_ESCHOOL_FIELD_CREATED_TIME_LABEL"
			description="COM_ESCHOOL_FIELD_CREATED_TIME_DESC"
			class="readonly"
			size="20"
			readonly="true"
			filter="unset" />

		<field name="modified_by"
			type="hidden"
			filter="unset" />

		<field name="modified"
			type="text"
			label="COM_ESCHOOL_FIELD_MODIFIED_TIME_LABEL"
			description="COM_ESCHOOL_FIELD_MODIFIED_TIME_DESC"
			class="readonly"
			size="20"
			readonly="true"
			filter="unset" />
	</fieldset>

	<fields name="params">
		<fieldset name="basic" label="COM_ESCHOOL_BASIC_PARAMS_FIELDSET_LABEL">
		</fieldset>

		<fieldset name="advanced" label="COM_ESCHOOL_ADVANCED_PARAMS_FIELDSET_LABEL">
		</fieldset>
	</fields>

</form>
