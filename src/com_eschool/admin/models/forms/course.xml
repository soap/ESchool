<?xml version="1.0" encoding="utf-8"?>
	<!-- $Id$ -->
<form>
	<fieldset>
		<field name="id"
			type="text"
			label="JGLOBAL_FIELD_ID_LABEL"
			description ="JGLOBAL_FIELD_ID_DESC"
			default="0"
			class="readonly"
			size="10"
			readonly="true"  />

		<field name="class_level_id"
			type="sql"
			query="SELECT id, title FROM #__eschool_classlevels"
			key_field="id"
			value_field="title"
			label="COM_ESCHOOL_CLASS_LEVEL_LABEL"
			description="COM_ESCHOOL_CLASS_LEVEL_DESC"
			default="0"
			class="inputbox">
			<option value="0">COM_ESCHOOL_OPTION_NO_CLASS_LEVEL</option>
		</field>

		<field name="title"
			type="text"
			label="JGLOBAL_TITLE"
			description="JFIELD_TITLE_DESC"
			class="inputbox"
			size="45"
			required="true" />
			
		<field name="course_code"
			type="text"
			label="COM_ESCHOOL_COURSE_CODE_LABEL"
			description="COM_ESCHOOL_COURSE_CODE_DESC"
			class="inputbox"
			size="45" required="true"/>
			
		<field name="course_type"
			/>
		<field name="course_group_id"
			type="sql"
			query="SELECT id, title FROM #__eschool_coursegroups"
			key_field="id"
			value_field="title"
			label="COM_ESCHOOL_COURSE_GROUP_LABEL"
			description="COM_ESCHOOL_COURSE_GROUP_DESC"
			required="true"
			>
			<option value="">COM_ESCHOOL_OPTION_SELECT_COURSE_GROUP</option>
		</field>
		<field name="alias"
			type="text"
			label="JFIELD_ALIAS_LABEL"
			description="JFIELD_ALIAS_DESC"
			class="inputbox"
			size="45" />
		
		<field name="description"
			type="editor"
			label="COM_ESCHOOL_FIELD_DESCRIPTION_LABEL"
			description="COM_ESCHOOL_FIELD_DESCRIPTION_DESC"
			class="inputbox"
			filter="safehtml"
			buttons="true" />

		<field name="note"
			type="text"
			label="JFIELD_NOTE_LABEL"
			description="JFIELD_NOTE_DESC"
			class="inputbox"
			size="45" />

		<field name="published"
			type="list"
			label="JPUBLISHED"
			description="JFIELD_PUBLISHED_DESC"
			default="1"
			class="inputbox"
			filter="intval"
			size="1">
			<option value="1">
				JPUBLISHED</option>
			<option value="0">
				JUNPUBLISHED</option>
			<option value="2">
				JARCHIVED</option>
			<option value="-2">
				JTRASHED</option>
		</field>

		<field name="ordering"
			type="text"
			label="JFIELD_ORDERING_LABEL"
			description="JFIELD_ORDERING_DESC"
			default="0"
			class="inputbox"
			size="6" />

		<field name="access"
			type="accesslevel"
			label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC"
			class="inputbox"
			size="1" />

		<field name="language"
			type="contentlanguage"
			label="JFIELD_LANGUAGE_LABEL"
			description="JFIELD_FIELD_LANGUAGE_DESC"
			default="*"
			class="inputbox">
			<option value="*">JALL</option>
		</field>

		<field name="metadesc"
			type="textarea"
			label="JFIELD_META_DESCRIPTION_LABEL"
			description="JFIELD_META_DESCRIPTION_DESC"
			class="inputbox"
			rows="3"
			cols="30" />

		<field name="metakey"
			type="textarea"
			label="JFIELD_META_KEYWORDS_LABEL"
			description="JFIELD_META_KEYWORDS_DESC"
			class="inputbox"
			rows="3"
			cols="30" />

		<field name="checked_out"
			type="hidden"
			filter="unset" />

		<field name="checked_out_time"
			type="hidden"
			filter="unset" />

		<field name="created_by"
			type="hidden"
			filter="unset" />

		<field name="created"
			type="text"
			label="com_eschool_FIELD_CREATED_TIME_LABEL"
			description="com_eschool_FIELD_CREATED_TIME_DESC"
			class="readonly"
			size="20"
			readonly="true"
			filter="unset" />

		<field name="modified_by"
			type="hidden"
			filter="unset" />

		<field name="modified"
			type="text"
			label="com_eschool_FIELD_MODIFIED_TIME_LABEL"
			description="com_eschool_FIELD_MODIFIED_TIME_DESC"
			class="readonly"
			size="20"
			readonly="true"
			filter="unset" />
	</fieldset>

	<fields name="params">
		<fieldset name="basic" label="com_eschool_BASIC_PARAMS_FIELDSET_LABEL">
			<field name="show_title"
				type="list"
				label="JGLOBAL_SHOW_TITLE_LABEL"
				description="com_eschool_PARAM_SHOW_TITLE_DESC">
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>
		</fieldset>

		<fieldset name="advanced" label="com_eschool_ADVANCED_PARAMS_FIELDSET_LABEL">
			<field name="layout"
				type="componentlayout"
				label="JFIELD_ALT_LAYOUT_LABEL"
				description="JFIELD_ALT_COMPONENT_LAYOUT_DESC"
				extension="com_eschool"
				view="courses" />
		</fieldset>
	</fields>

</form>
